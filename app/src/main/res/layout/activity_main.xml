<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    android:orientation="vertical"
    tools:context="com.example.abc.cryptochange.MainActivity">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageViewLogo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:src="@drawable/bit" />


    <android.support.v7.widget.CardView
        android:id="@+id/cardViewCrypto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardCornerRadius="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">

                <TextView
                    android:id="@+id/countryCode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="USD"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/currencySymbol"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/textValue"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="30dp"
                    android:paddingRight="20dp"
                    android:text="$"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/textValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="50dp"
                    android:fontFamily="casual"
                    android:paddingLeft="20dp"
                    android:text="5,566.30"
                    android:textAllCaps="true"
                    android:textColor="#000000"
                    android:textSize="50dp"
                    android:textStyle="bold" />

            </RelativeLayout>



        </LinearLayout>
    </android.support.v7.widget.CardView>

    <Spinner
        android:id="@+id/currencySpinner"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:spinnerMode="dropdown"
        android:overScrollMode="ifContentScrolls"></Spinner>

</LinearLayout>
